{
  "name": "@miforge/api",
  "private": true,
  "version": "0.0.0",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build":"tsdown && pnpm run build:types && pnpm run build:bun",
    "build:types": "tsc --emitDeclarationOnly",
    "build:bun": "bun build --compile --minify --sourcemap ./src/index.ts --outfile dist/server",
    "check:types": "tsc -b",
    "dev": "bun run --tsconfig-override ./tsconfig.dev.json --inspect=localhost:6499/ --hot src/index.ts",
    "generate:types": "bun run scripts/index.ts"
  },
  "dependencies": {
    "@orpc/client": "^1.10.0",
    "@orpc/json-schema": "^1.10.0",
    "@orpc/openapi": "^1.10.0",
    "@orpc/server": "^1.10.0",
    "@orpc/zod": "^1.10.0",
    "dotenv-flow": "^4.1.0",
    "envalid": "^8.1.0",
    "hono": "^4.10.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bun": "^1.3.0",
    "tsdown": "^0.15.9",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.18.3"
}