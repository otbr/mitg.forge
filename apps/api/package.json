{
	"name": "@miforge/api",
	"private": true,
	"version": "0.0.1",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "tsdown && pnpm run build:types && pnpm run build:bun",
		"build:types": "tsc --emitDeclarationOnly",
		"build:bun": "bun build --compile --minify --sourcemap ./src/index.ts --outfile dist/server",
		"dev": "bun run --inspect=localhost:6499/ --hot src/index.ts",
		"db:generate": "prisma generate --no-hints",
		"db:migrate": "prisma migrate deploy",
		"db:migrate:dev": "prisma migrate dev",
		"db:seed": "bun run prisma/seed/index.ts",
		"db:reset": "prisma migrate reset --force",
		"types": "tsc -b",
		"check": "biome check .",
		"lint": "biome lint .",
		"prepare": "pnpm run db:generate"
	},
	"dependencies": {
		"@miforge/core": "workspace:*",
		"@miforge/email": "workspace:*",
		"@napi-rs/canvas": "^0.1.84",
		"@orpc/client": "catalog:orpc",
		"@orpc/experimental-publisher": "catalog:orpc",
		"@orpc/json-schema": "catalog:orpc",
		"@orpc/openapi": "catalog:orpc",
		"@orpc/server": "catalog:orpc",
		"@orpc/zod": "catalog:orpc",
		"@prisma/adapter-mariadb": "^6.19.0",
		"@prisma/client": "^6.19.0",
		"bullmq": "^5.65.1",
		"dotenv-flow": "^4.1.0",
		"fast-xml-parser": "^5.3.2",
		"hono": "^4.10.7",
		"ioredis": "^5.8.2",
		"jsonwebtoken": "^9.0.3",
		"nodemailer": "^7.0.11",
		"otplib": "^12.0.1",
		"react": "catalog:react",
		"react-dom": "catalog:react",
		"reflect-metadata": "^0.2.2",
		"tsyringe": "^4.10.0",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@types/bun": "catalog:",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/nodemailer": "^7.0.4",
		"@types/react": "catalog:react",
		"@types/react-dom": "catalog:react",
		"prisma": "^6.19.0",
		"prisma-dbml-generator": "^0.12.0",
		"tsdown": "catalog:",
		"typescript": "catalog:ts"
	},
	"packageManager": "pnpm@10.24.0"
}
