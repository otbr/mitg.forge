{
	"name": "@miforge/api",
	"private": true,
	"version": "0.0.1",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "tsdown && pnpm run build:types && pnpm run build:bun",
		"build:types": "tsc --emitDeclarationOnly",
		"build:bun": "bun build --compile --minify --sourcemap ./src/index.ts --outfile dist/server",
		"dev": "bun run --tsconfig-override ./tsconfig.dev.json --inspect=localhost:6499/ --hot src/index.ts",
		"db:generate": "prisma generate --no-hints",
		"db:migrate": "prisma migrate deploy",
		"db:migrate:dev": "prisma migrate dev",
		"db:seed": "bun run prisma/seed/index.ts",
		"db:reset": "prisma migrate reset --force",
		"types": "tsc -b",
		"check": "biome check .",
		"lint": "biome lint .",
		"prepare": "pnpm run db:generate && pnpm run build && pnpm run build:types"
	},
	"dependencies": {
		"@miforge/emails": "workspace:*",
		"@orpc/client": "^1.11.1",
		"@orpc/json-schema": "^1.11.1",
		"@orpc/openapi": "^1.11.1",
		"@orpc/server": "^1.11.1",
		"@orpc/zod": "^1.11.1",
		"@prisma/adapter-mariadb": "^6.19.0",
		"@prisma/client": "^6.19.0",
		"dotenv-flow": "^4.1.0",
		"envalid": "^8.1.1",
		"hono": "^4.10.4",
		"jsonwebtoken": "^9.0.2",
		"nodemailer": "^7.0.10",
		"react": "catalog:react",
		"react-dom": "catalog:react",
		"reflect-metadata": "^0.2.2",
		"tsyringe": "^4.10.0",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@types/bun": "catalog:",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/nodemailer": "^7.0.3",
		"prisma": "^6.19.0",
		"prisma-dbml-generator": "^0.12.0",
		"tsdown": "^0.15.12",
		"typescript": "catalog:ts"
	},
	"packageManager": "pnpm@10.18.3"
}
