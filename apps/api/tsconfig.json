{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"declaration": true,
		"declarationMap": true,
		"verbatimModuleSyntax": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strict": true,
		"skipLibCheck": true,
		"lib": ["ES2022", "DOM"],
		"paths": {
			"generated/*": ["./generated/*"],
			"@/*": ["./src/*"]
		},
		"outDir": "./dist",
		"types": ["bun"],
		"composite": true,
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx"
	}
}
